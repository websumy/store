<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="page-header">
  <h1><%= @product.title %></h1>
</div>

<div class="row">
  <div class="col-md-2 image_product">
    <%= image_tag(@product.image_url, alt: @product.title, class: 'image') %>
  </div>
  <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">Description</div>
        <div class="panel-body">
          <%= @product.description %>
        </div>
      </div>
      <div class="col-md-2 price">Price: <span class="price-number"><%= number_to_currency @product.price %></span></div>
  </div>
</div>
<hr>

<% if session[:user_id] %>
<div class="row">
  <div class="col-md-11"></div>
  <div class="col-md-1">
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>
</div>
<% end %>
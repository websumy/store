<% if @user %>
    <div class="greeting">
      <%= link_to 'Check orders', orders_path %>
      <br>
      <%= link_to 'Create new product', new_product_path %>
    </div>
<% end %>

<% if notice %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="page-header">
  <h1>Store</h1>
</div>
<div class="row">
    <% @products.each do |product| %>
        <div class="col-sm-3 col-md-3 col-lg-3">
          <div class="thumbnail product">
            <%= image_tag(product.image_url, alt: product.title, class: 'image') %>
            <div class="caption">
              <h3><%= product.title %></h3>
              <p class="description"><%= product.description.strip %></p>
              <p class="price"><%= number_to_currency product.price %></p>
              <%= button_to 'Add to cart', line_items_path(product_id: product), class: 'btn btn-success' %>
              <%= button_to 'Show more', product, method: :get, class: 'btn btn-info' %>
            </div>
          </div>
        </div>
    <% end %>
</div>

<%= paginate @products %>
<% if notice %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="page-header">
  <h1>Order #<%= @order.id %></h1>
</div>

<div class="col-md-3"></div>
<div class="col-md-6">
<table class="table">
  <thead>
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% @order.cart.line_items.each do |line_item| %>
      <tr>
        <th scope="row"><%= line_item.product.title %></th>
        <th><%= line_item.quantity %></th>
        <th><%= line_item.product.price %></th>
      </tr>
  <% end %>
  </tbody>
</table>
  <p class="total_price">Total: <%= number_to_currency total_price(@order.cart) %></p>
</div>

<div class="col-md-3"></div>
<% if session[:user_id] %>
    <div class="row">
      <div class="col-md-11"></div>
      <div class="col-md-1">
        <%= link_to 'Back', orders_path %>
      </div>
    </div>
<% end %>

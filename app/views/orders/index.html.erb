<% if notice %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="page-header">
  <h1>Orders</h1>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>E-mail</th>
    <th>Show more</th>
    <th>Remove</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <th scope="row"><%= order.name %></th>
        <th><%= order.address %></th>
        <th><%= order.email %></th>
        <% label = '<span class="glyphicon glyphicon-info-sign icon_info" aria-hidden="true"></span>' %>
        <th><%= link_to label.html_safe, order %></th>
        <% label = '<span class="glyphicon glyphicon-trash remove_item" aria-hidden="true"></span>' %>
        <th><%= link_to label.html_safe, order, method: :delete, data: {confirm: 'Are you sure?'} %></th>
      </tr>
  <% end %>
  </tbody>
</table>
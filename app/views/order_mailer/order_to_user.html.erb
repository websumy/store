<div class="col-md-3"></div>
<div class="col-md-6">
  <table class="table">
    <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    <% @order.cart.line_items.each do |line_item| %>
        <tr>
          <th scope="row"><%= line_item.product.title %></th>
          <th><%= line_item.quantity %></th>
          <th><%= line_item.product.price %></th>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>